% ## Calculus
\newcommand{\df}[1]{\mathrm{d}#1}
\newcommand{\ddt}[1]{\frac{\mathrm{d}#1}{\mathrm{dt}}} % d/dt
\newcommand{\dds}[1]{\frac{\mathrm{d}#1}{\mathrm{ds}}} % d/ds
\newcommand{\diag}[3]{\begin{pmatrix}  #1 & 0 & 0 \\  0 & #2 & 0 \\  0 & 0 & #3 \end{pmatrix}} % quickly make a diagonal 3x3 matrix
\newcommand{\unhat}[1]{\left(#1\right)^{\vee}} % Unhat what's in parens.
\newcommand{\quat}[1]{\bar{\mathbf{#1}}} % quaternion

% ## Probability / Info. Theory
\newcommand{\prob}[1]{Pr\left(#1\right)}
\newcommand{\rv}[1]{\underline{#1}} % random variable
\newcommand{\expval}[1]{\mathbb{E} \left( #1 \right)} % expected value
\newcommand{\expvals}[2]{\mathbb{E}_{#1} \left( #2 \right)}
\newcommand{\entropy}[1]{\mathbb{H} \left( #1 \right)} % Shannon entropy
\newcommand{\binentropy}[1]{\mathbb{H}_b \left( #1 \right)} % Binary entropy
\newcommand{\fdivergence}[2]{\mathbb{D}_f \left( #1 \middle|\middle| #2\right)} % f-divergence
\newcommand{\relentropy}[2]{\mathbb{D} \left( #1 \middle|\middle| #2\right)} % relative entropy
\newcommand{\mutinfo}[2]{\mathbb{I}\left(#1;#2\right)}
\newcommand{\condmutinfo}[3]{\mathbb{I}\left(#1;#2\middle|#3\right)}
\newcommand{\totalvariation}[2]{\mathbb{V} \left( #1, #2 \right)} % Total variation 

