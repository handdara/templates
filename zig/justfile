default: build test-cli
    nix run

test-cli:
    ./result/bin/zft --help
    ./result/bin/zft -n 8
    ./result/bin/zft --number 64
    ./result/bin/zft --number 64 -s string_cheese

# open editor in a dev shell
edit:
    nix develop --command bash -c "nvim"

# drop into dev shell
dev:
    nix develop --command fish

# build & test
build: 
    nix build
